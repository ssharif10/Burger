<h1>Eat-Da-Burger!</h1>

{{!-- <h2>Cats that are not sleepy!</h2> --}}

<div class="container">
  <div class="row">
    <div class="col-lg-6" id="uneaten">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">DEVOUR!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-lg-6" id="eaten">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

          <div class="form-group">
            <label for="bg">Burger Name:</label>
            <input type="text" id="bg" name="name">
          </div>

          <button type="submit">Place Order</button>
        </form>
  </div>
</div>
